{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">

        <section class="avatar" style="background: url(https://source.unsplash.com/collection/95556558/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <h3>New Fitness Trainer or Instructor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Instructor name</div>
                <div>
                    <input type="text" name="name">
                </div>
            </div>

            <div class="item">
                <div>Date of birth</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>
                    <span>
                        <input type="radio" name="gender" value="M" checked>
                        Male
                    </span>
                    <span>
                        <input type="radio" name="gender" value="F">
                        Female
                    </span>
                    <span>
                        <input type="radio" name="gender" value="LGBTQ+">
                        LGBTQ+
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Work-related field</div>
                <div>
                  <input type="text" name="services">
                </div>
            </div>

            <button type="submit">Save</button>

        </section>

    </form>
    

{% endblock content %}