   <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://"
                    value="{{ instructor.avatar_url }}">
                </div>
            </div>

            <div class="item">
                <div>Instructor name</div>
                <div>
                    <input type="text" name="name" value="{{ instructor.name }}">
                </div>
            </div>

            <div class="item">
                <div>Date of birth</div>
                <div>
                    <input type="date" name="birth" value="{{ instructor.birth }}">
                </div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>
                    <span>
                        <input 
                        type="radio" 
                        name="gender" 
                        value="M"
                        {% if instructor.gender == "M" %}
                            checked
                        {% endif %}>
                        Male
                    </span>
                    <span>
                        <input 
                        type="radio" 
                        name="gender" 
                        value="F"
                          {% if instructor.gender == "F" %}
                            checked
                        {% endif %}>
                        Female
                    </span>
                    <span>
                        <input 
                        type="radio" 
                        name="gender" 
                        value="LGBTQ+"
                          {% if instructor.gender == "LGBTQ+" %}
                            checked
                        {% endif %}>
                        LGBTQ+
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Work-related field</div>
                <div>
                  <input type="text" name="services" value="{{ instructor.services }}">
                </div>
            </div>

            <button type="submit">Save</button>
